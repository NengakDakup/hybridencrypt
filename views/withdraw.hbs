{{> dashboard_header }}

{{> dashboard_navigation }}

<div class="content-body">
    <div class="container-fluid">

        <div class="row">
            <div class="col-xl-12">
                <div class="page-title-content">
                    <p><a href="/dashboard" class="text-dark">Dashboard</a> >>
                        <a href="/wallet" class="text-dark">Wallet</a> >> <strong>Withdraw</strong>
                    </p>
                </div>
            </div>
        </div>

        <div class="col-lg-12">
            {{#if msg}}
            {{> alert}}
            {{/if}}
        </div>

        <div class="row justify-content-center">
            <div class="col-xl-6">
                <div class="card">
                    <div class="card-header">
                        <h3 class="">Make a Withdrawal</h3>
                    </div>
                    <div class="card-body">
                        <div class="alert alert-danger" role="alert">
                            <h5 class="alert-heading"><i class="fa fa-bell"></i> Note!</h5>
                            <p>
                                Minimum Amount For Withdrawal is <strong>${{minWithdraw}}</strong>
                            </p>
                        </div>
                        <hr />
                        <form method="post" action="/confirm-withdraw" name="myform"
                            class="currency_validate trade-form row g-3">
                            <div class="col-12">
                                <label class="form-label">Amount</label>
                                <div class="input-group">
                                    <select class="form-control" name="method">
                                        <option value="bank">USD</option>
                                    </select>
                                    <input type="number" name="amount" class="form-control" placeholder="00000"
                                        required>
                                </div>
                            </div>

                            <button type="submit" name="submit" class="btn btn-success btn-block">
                                Proceed
                            </button>


                        </form>
                    </div>
                </div>
            </div>
        </div>