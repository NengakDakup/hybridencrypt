<body>
    <div id="preloader">
        <div class="sk-three-bounce">
            <div class="sk-child sk-bounce1"></div>
            <div class="sk-child sk-bounce2"></div>
            <div class="sk-child sk-bounce3"></div>
        </div>
    </div>

    <div id="main-wrapper">

        {{> dashboard_header }}

        <div class="content-body">
            <div class="container">
                <div class="row">

                    {{> admin_navigation }}

                    <div class="col-12">
                        {{#if msg}}
                            <div class="alert alert-warning alert-dismissible" role="alert" style="margin: 10px;">
                                {{msg}}
                            </div>
                        {{/if}}
                    </div>
                    
                    <div class="col-xl-12">
                        <div class="card">
                            <div class="card-header">
                                <div class="container-fluid">
                                    <div class="row">
                                        <div class="col-md-3">
                                            <h4 class="card-title">All Withdrawals</h4>
                                        </div>
                                        <div class="col-md-9">
                                            <form action="/admin/withdrawals" method="post">
                                                <div class="form-group form-inline float-right">
                                                    <input class="form-control" type="text" placeholder="Enter Transaction ID" name="id"/>
                                                    <button class="btn btn-primary" type="submit">
                                                        <i class="fa fa-search"></i>
                                                        Search
                                                    </button>
                                                </div>
                                            </form>   
                                        </div>
                                    </div>
                                </div>
                            </div>
                            <div class="card-body">
                                <div class="transaction-table">
                                    <div class="table-responsive">
                                        <table class="table table-striped mb-0 table-responsive-sm">
                                            <thead>
                                                <tr>
                                                    <th>ID</th>
                                                    <th>User</th>
                                                    <th>Amount BTC</th>
                                                    <th>Amount USD</th>
                                                    <th>Status</th>
                                                    <th>Date</th>
                                                </tr>
                                            </thead>
                                            <tbody>
                                                {{#forEach withdrawals}}
                                                    <tr>
                                                        <td>{{_id}}</td>
                                                        <td>{{user}}</td>
                                                        <td>{{amountBTC}} BTC</td>
                                                        <td>${{amountUSD}} USD</td>
                                                        <td>{{status}}</td>
                                                        <td>{{date date "DD/MM/YYYY"}}</td>
                                                        {{> withdrawal_button}}
                                                    </tr>
                                                {{/forEach}}
                                            </tbody>
                                        </table>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>

                   
                </div>
            </div>
        </div>

       {{> dashboard_footer}}
    </div>
</body>