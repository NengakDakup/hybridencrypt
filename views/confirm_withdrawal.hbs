{{> dashboard_header }}

{{> dashboard_navigation }}

<div class="content-body">
    <div class="container-fluid">

        <div class="row">
            <div class="col-xl-12">
                <div class="page-title-content">
                    <p><a href="/dashboard" class="text-dark">Dashboard</a> >>
                        <a href="/wallet" class="text-dark">Wallet</a> >> <strong>Confirm
                            Withdrawal</strong>
                    </p>
                </div>
            </div>
        </div>

        <div class="col-lg-12">
            {{#if msg}}
            {{> alert}}
            {{/if}}
        </div>

        <div class="row justify-content-center">
            <div class="col-xl-6">
                <div class="card">
                    <div class="card-header">
                        <h3 class="">Confirm Your Withdrawal</h3>
                    </div>
                    <div class="card-body">
                        <div class="alert alert-danger" role="alert">
                            <h5 class="alert-heading"><i class="fa fa-bell"></i> Note!</h5>
                            <p>
                                Once your Withdrawal request is approved, the funds would be sent to the provided wallet
                                address below which you provided during signup.
                            </p>
                        </div>
                        <hr />
                        <ul class="balance-widget">
                            <li>
                                <h5>Withdrawal Amount</h5>
                                <div class="text-end">
                                    <h5 class="text-success">${{amountUSD}}</h5>
                                </div>
                            </li>
                            <li>
                                <h5>Withdrawal Amount In BTC</h5>
                                <div class="text-end">
                                    <h5 class="text-warning">{{amountBTC}} BTC</h5>
                                </div>
                            </li>
                            <li>
                                <h5>Payment Method</h5>
                                <div class="text-end">
                                    <h5 class="text-primary"><img height="70px"
                                            src="https://www.inearentertainment.com/wp-content/uploads/2014/11/bitcoin-456x185.jpg" />
                                    </h5>
                                </div>
                            </li>
                            <li>
                                <h5>Payment Gateway</h5>
                                <div class="text-end">
                                    <h5 class="text-primary"><img
                                            src="data:image/png;base64," />
                                    </h5>
                                </div>
                            </li>
                            <li>
                                <h5>Exchange Rate</h5>
                                <div class="text-end">
                                    <h5 class="text-primary">{{rate}} BTC / USD</h5>
                                </div>
                            </li>
                            <li>
                                <h5>Charges</h5>
                                <div class="text-end">
                                    <h5 class="text-primary">$0.0000</h5>
                                </div>
                            </li>
                            <li>
                                <h5>Total Amount </h5>
                                <div class="text-end">
                                    <h5 class="text-success">${{amountUSD}}</h5>
                                </div>
                            </li>
                            <li>
                                <h5>Total Amount BTC</h5>
                                <div class="text-end">
                                    <h5 class="text-warning">{{amountBTC}} BTC</h5>
                                </div>
                            </li>

                        </ul>
                        <form class="text-center m-3">
                            <a class="btn btn-warning btn-lg"
                                href="/make-withdraw?amountBTC={{amountBTC}}&amountUSD={{amountUSD}}">
                                Request Withdrawal
                                <i class="fa fa-arrow-right"></i>
                            </a>

                        </form>
                    </div>
                </div>
            </div>
        </div>