<body>
    <div id="preloader">
        <div class="sk-three-bounce">
            <div class="sk-child sk-bounce1"></div>
            <div class="sk-child sk-bounce2"></div>
            <div class="sk-child sk-bounce3"></div>
        </div>
    </div>

    <div id="main-wrapper">

        {{> dashboard_header }}

        <div class="content-body">
            <div class="container">
                <div class="row">

                    {{> admin_navigation }}

                    {{#if msg}}
                        <div class="alert alert-warning" role="alert" style="margin: 10px;">
                            {{msg}}
                        </div>
                    {{/if}}
                    
                    <div class="col-xl-12">
                        <div class="card">
                            <div class="card-header">
                                <div class="container-fluid">
                                    <div class="row">
                                        <div class="col-md-3">
                                            <h4 class="card-title">All Investments</h4>
                                        </div>
                                        <div class="col-md-9">
                                            <form action="/admin/investments" method="post">
                                                <div class="form-group form-inline float-right">
                                                    <input class="form-control" type="text" placeholder="Enter Transaction ID" name="id"/>
                                                    <button class="btn btn-primary" type="submit">
                                                        <i class="fa fa-search"></i>
                                                        Search
                                                    </button>
                                                </div>
                                            </form>   
                                        </div>
                                    </div>
                                </div>
                            </div>
                            <div class="card-body">
                                <div class="transaction-table">
                                    <div class="table-responsive">
                                        <table class="table table-striped mb-0 table-responsive-sm">
                                            <thead>
                                                <tr>
                                                    <th>Investment ID</th>
                                                    <th>Amount</th>
                                                    <th>Daily Profits</th>
                                                    <th>Total Profit</th>
                                                    <th>Plan</th>
                                                    <th>Status</th>
                                                    <th>Active Days</th>
                                                    <th>Date Created</th>
                                                </tr>
                                            </thead>
                                            <tbody>
                                                {{#forEach investments}}
                                                    <tr>
                                                        <td>{{_id}}</td>
                                                        <td>
                                                            ${{amount}} USD
                                                            {{!-- <form class="form form-inline" action="/admin/investment/update" method="POST">
                                                                <div class="form-group">
                                                                    <input name="newAmount" type="number" placeholder="Amount to Top Up" style="max-width: 200px;"/>
                                                                    <input type="text" value="{{_id}}" name="id" hidden>
                                                                    <input class="" type="submit" value="Top Up" />
                                                                </div>
                                                            </form> --}}
                                                        </td>
                                                        <td>${{daily}} USD</td>
                                                        <td>${{monthly}} USD</td>
                                                        <td>{{#eq "basic" plan}} Basic Plan {{else}} Premium Plan {{/eq}}</td>
                                                        <td>{{status}}</td>
                                                        <td>{{days}}</td>
                                                        <td>{{date date "DD/MM/YYYY"}}</td>
                                                    </tr>
                                                {{/forEach}}
                                            </tbody>
                                        </table>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>

                   
                </div>
            </div>
        </div>

       {{> dashboard_footer}}
    </div>
</body>