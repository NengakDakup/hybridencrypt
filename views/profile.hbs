<body>
    <div id="preloader">
        <div class="sk-three-bounce">
            <div class="sk-child sk-bounce1"></div>
            <div class="sk-child sk-bounce2"></div>
            <div class="sk-child sk-bounce3"></div>
        </div>
    </div>

    <div id="main-wrapper">

        {{> dashboard_header }}

        <div class="content-body">
            <div class="container">
                <div class="row">

                    {{> dashboard_navigation }}

                    <div class="col-12">
                        {{#if msg}}
                            <div class="alert alert-warning alert-dismissible" role="alert" style="margin: 10px;">
                                {{msg}}
                            </div>
                        {{/if}}
                    </div>
                    
                    <div class="col-12">
                        <div class="card">
                            <div class="card-header">
                                <h4 class="card-title">Change Password</h4>
                            </div>
                            <div class="card-body">
                                <form action="/change-password" method="POST">
                                    <div class="form-row">
                                        <div class="form-group col-md-6 col-sm-12">
                                            <label class="mr-sm-2">Current Password</label>
                                            <input type="password" class="form-control" placeholder="**********" required name="oldP">
                                        </div>
                                        <div class="form-group col-md-6 col-sm-12">
                                            <label class="mr-sm-2">New Password</label>
                                            <input type="password" class="form-control" placeholder="**********" required name="newP">
                                        </div>
                                        <div class="col-12">
                                            <button class="btn btn-danger waves-effect px-4">Change Password</button>
                                        </div>
                                    </div>
                                </form>
                            </div>
                        </div>
                    </div>

                    <div class="col-xl-12">
                        <div class="card">
                            <div class="card-header">
                                <h4 class="card-title">Personal Information</h4>
                            </div>
                            <div class="card-body">
                                <div class="form-group">
                                    <div class="row">
                                        <div class="col-md-6 col-sm-12">
                                            <label>First Name</label>
                                            <input disabled type="text" class="form-control" placeholder="{{user.firstname}}" >
                                        </div>
                                        <div class="col-md-6 col-sm-12">
                                            <label>Last Name</label>
                                            <input disabled type="text" class="form-control" placeholder="{{user.lastname}}" >
                                        </div>
                                    </div>
                                    <div class="row mt-md-4">
                                        <div class="col-md-6 col-sm-12">
                                            <label>Email Address</label>
                                            <input disabled type="text" class="form-control" placeholder="{{user.email}}" >
                                        </div>
                                        <div class="col-md-6 col-sm-12">
                                            <label>BTC Wallet Address</label>
                                            <input disabled type="text" class="form-control" placeholder="{{user.btcwallet}}" >
                                        </div>
                                    </div>
                                    <div class="row mt-md-4">
                                        <div class="col-md-6 col-sm-12">
                                            <label>Nationality</label>
                                            <input disabled type="text" class="form-control" placeholder="{{user.nationality}}" >
                                        </div>
                                        <div class="col-md-6 col-sm-12">
                                            <label>Phone Number</label>
                                            <input disabled type="text" class="form-control" placeholder="{{user.phone}}" >
                                        </div>
                                    </div>                                    
                                </div>
                            </div>
                        </div>
                    </div>
                   
                </div>
            </div>
        </div>

        {{> dashboard_footer}}
    </div>
</body>