                    <div class="card-body">
                        <form method="post" action="/confirm-deposit" name="myform"
                            class="currency_validate trade-form row g-3">
                            <div class="col-12">
                                <label class="form-label">Select Plan</label>
                                <div class="input-group">
                                    <select class="form-control" name="method">
                                        <option value="bank">USD</option>
                                    </select>
                                </div>
                            </div>
                            <div class="col-12">
                                <label class="form-label">Amount</label>
                                <div class="input-group">
                                    <select class="form-control" name="method">
                                        <option value="bank">USD</option>
                                    </select>
                                    <input type="number" name="amountUsd" class="form-control" placeholder="00000"
                                        required>
                                </div>
                            </div>
                            <p class="text-warning mb-1">Note: Minimum Amount For Deposit is ${{minDeposit}}</p>

                            <button type="submit" name="submit" class="btn btn-success btn-block">
                                Proceed
                            </button>


                        </form>

